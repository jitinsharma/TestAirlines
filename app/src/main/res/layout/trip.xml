<com.andexert.library.RippleView
    android:id="@+id/moree"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    rv_centered="true"
    rv_rippleDuration="100"
    rv_framrate="100"
    app:rv_color="@color/Silver"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    card_view:cardBackgroundColor="@color/AliceBlue"
    card_view:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/tripDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="23 Apr"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tripStatus"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:text="CONFIRMED"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/tripCity"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tripDate"
            android:fontFamily="sans-serif-light"
            android:text="BLR - DEL"/>

        <TextView
            android:id="@+id/tripTime"
            android:paddingTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tripDate"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal"
            android:text="20:40"/>

        <TextView
            android:id="@+id/flightNo"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:fontFamily="sans-serif-light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tripDate"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="SG-805"/>

        </RelativeLayout>
</android.support.v7.widget.CardView>
    </com.andexert.library.RippleView>