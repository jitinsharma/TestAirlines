<com.andexert.library.RippleView
    android:id="@+id/moree"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    rv_centered="true"
    rv_rippleDuration="100"
    rv_framrate="100"
    app:rv_color="@android:color/secondary_text_light_nodisable"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    card_view:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/flightName"
            android:fontFamily="sans-serif-medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Air India"/>

        <TextView
            android:id="@+id/searchFlightNo"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:fontFamily="sans-serif-light"
            android:text="AI-404"
            android:layout_below="@+id/flightName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:paddingTop="10dp"
            android:id="@+id/searchDepTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:layout_toLeftOf="@+id/dash"
            android:text="7.30"/>

        <TextView
            android:paddingTop="10dp"
            android:id="@+id/searchLandTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="10.30"
            android:layout_toRightOf="@+id/dash"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:textSize="20dp"
            android:id="@+id/price"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/GhostWhite"
            android:background="@color/DodgerBlue"
            android:elevation="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5000"
            android:layout_below="@+id/searchDepTime"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/dash"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="-"/>

        <TextView
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:id="@+id/searchFlightTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="sans-serif-light"
            android:text="3h"/>

        <TextView
            android:id="@+id/noOfStops"
            android:fontFamily="sans-serif-light"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:layout_below="@+id/searchFlightTime"
            android:layout_alignParentRight="true"
            android:text="Non-Stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/refundStatus"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:fontFamily="sans-serif-light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Refundable"
            android:layout_below="@+id/noOfStops"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
    </com.andexert.library.RippleView>
