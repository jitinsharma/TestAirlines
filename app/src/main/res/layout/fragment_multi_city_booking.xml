<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/multiCityBookingFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    tools:context="com.example.jitin.testairlines.Booking">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:contentPaddingBottom="10dp"
        card_view:cardElevation="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/header"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/White"
                android:fontFamily="sans-serif-light"
                android:text="  Book a flight"
                android:textSize="20sp"
                android:background="@color/Red"/>

            <Button
                android:id="@+id/centerBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_below="@+id/header"
                android:layout_toRightOf="@+id/fromBtn"
                android:background="@drawable/flight_switch"/>

            <Button
                android:id="@+id/fromBtn"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header"
                android:layout_alignParentLeft="true"
                android:background="@android:color/transparent"
                android:text="From"/>

            <Button
                android:id="@+id/toBtn"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header"
                android:layout_toRightOf="@+id/centerBtn"
                android:background="@android:color/transparent"
                android:text="To"/>

            <ImageView
                android:id="@+id/multiCity1Image"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/toBtn"
                android:paddingBottom="20dp"
                android:layout_below="@+id/header"
                android:background="@drawable/ic_event_grey600_36dp"/>

            <TextView
                android:paddingTop="20dp"
                android:text="28"
                android:id="@+id/multiCity1Date"
                android:layout_below="@+id/header"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/multiCity1Image"/>

            <TextView
                android:paddingTop="20dp"
                android:text="Mar"
                android:layout_below="@+id/header"
                android:id="@+id/multiCity1Month"
                android:layout_toRightOf="@+id/multiCity1Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_below="@+id/multiCity3"
                android:layout_alignParentLeft="true"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                android:background="@color/ForestGreen"
                android:textColor="@color/White"
                android:id="@+id/addCity"
                android:layout_toRightOf="@+id/multiCity1Month"
                android:text="Add"/>
            <Button
                android:layout_marginLeft="10dp"
                android:id="@+id/removeCity"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                android:background="@color/Red"
                android:textColor="@color/White"
                android:layout_below="@+id/multiCity3"
                android:layout_toRightOf="@+id/addCity"
                android:text="Remove"/>

            <View
                android:id="@+id/dividerHorizontalLine"
                android:layout_below="@+id/multiCity1Image"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/LightGrey"/>

            <RelativeLayout
                android:layout_below="@id/dividerHorizontalLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/multiCity1">
            </RelativeLayout>


            <RelativeLayout
                android:layout_below="@id/multiCity1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/multiCity2">
            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@id/multiCity2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/multiCity3">
            </RelativeLayout>

            <TextView
                android:id="@+id/noOfAdults"
                android:paddingLeft="20dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/addCity"
                android:text="Adults"
                android:fontFamily="sans-serif-light"/>
            <Spinner
                android:id="@+id/multiCityAdultList"
                android:dropDownWidth="50dp"
                android:layout_below="@+id/noOfAdults"
                android:paddingLeft="15dp"
                android:paddingStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Spinner>

            <TextView
                android:id="@+id/noOfChild"
                android:paddingLeft="20dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/addCity"
                android:layout_toRightOf="@+id/noOfAdults"
                android:text="Child"
                android:fontFamily="sans-serif-light"/>
            <Spinner
                android:id="@+id/multiCityChildList"
                android:dropDownWidth="50dp"
                android:layout_below="@+id/noOfChild"
                android:layout_toRightOf="@+id/multiCityAdultList"
                android:paddingLeft="15dp"
                android:paddingStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Spinner>

            <TextView
                android:id="@+id/noOfInfant"
                android:paddingLeft="20dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/addCity"
                android:layout_toRightOf="@+id/noOfChild"
                android:text="Infant"
                android:fontFamily="sans-serif-light"/>
            <Spinner
                android:id="@+id/multiCityInfantList"
                android:dropDownWidth="50dp"
                android:layout_below="@+id/noOfInfant"
                android:layout_toRightOf="@+id/multiCityChildList"
                android:paddingLeft="15dp"
                android:paddingStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Spinner>

            <TextView
                android:id="@+id/cabinClassText"
                android:paddingRight="20dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/addCity"
                android:layout_alignParentRight="true"
                android:text="Class"
                android:fontFamily="sans-serif-light"/>
            <Spinner
                android:id="@+id/multiCityCabinClass"
                android:layout_below="@+id/cabinClassText"
                android:layout_alignParentRight="true"
                android:paddingLeft="15dp"
                android:paddingStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Spinner>

            <com.andexert.library.RippleView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/more"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/multiCityCabinClass"
                rv_centered="true"
                app:rv_rippleDuration="100"
                app:rv_framerate="100">

                <Button
                    android:id="@+id/searchButton"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cabinClass"
                    android:background="@color/RoyalBlue"
                    android:textColor="@color/White"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-light"
                    android:text="Search Flights"/>
            </com.andexert.library.RippleView>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>
